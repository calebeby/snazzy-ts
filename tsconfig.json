{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": false,
    "esModuleInterop": true
  },
  "include": ["index.ts", "types.d.ts"],
  "exclude": ["src/**/*.test.ts"]
}
